---
import { Image } from 'astro:assets';
import womanSmiling from '../assets/images/woman-smiling.png';
---

<section class="bg-bg-main-darker text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-brand-deep" style="font-family: var(--font-family-display);">
          Love your smile
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-brand-deep">
          Whether it's been 6 months or 6 years since your last visit, we're here to help youâ€”no judgment, just great care.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="/contact"
            class="bg-white text-brand-deep px-8 py-3 rounded-md font-semibold hover:bg-bg-off-white transition-colors duration-200 text-center"
          >
            Book an Appointment
          </a>
          <a
            href="/services"
            class="border-2 border-brand-deep text-brand-deep px-8 py-3 rounded-md font-semibold hover:bg-brand-deep/10 transition-colors duration-200 text-center"
          >
            Our Services
          </a>
        </div>
      </div>
      <div class="hidden md:block">
        <Image
          src={womanSmiling}
          alt="Happy patient with a beautiful smile"
          class="w-full h-auto rounded-lg"
        />
      </div>
    </div>
  </div>
</section>

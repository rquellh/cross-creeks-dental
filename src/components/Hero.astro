---
import { Image } from 'astro:assets';
import womanSmiling from '../assets/images/woman-smiling.png';
import Button from './Button';
---

<section class="relative bg-bg-main-darker text-white overflow-hidden py-40">
  <div class="hidden sm:block absolute left-[50%] md:left-[48%] top-0 bottom-0 w-[50%] md:w-[52%] max-w-4xl">
    <Image
      src={womanSmiling}
      alt="Happy patient with a beautiful smile"
      class="w-full h-full object-cover object-left"
    />
  </div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight text-brand-deep" style="font-family: var(--font-family-display);">
          Love your smile
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-brand-deep">
          Whether it's been 6 months or 6 years since your last visit, we're here to help youâ€”no judgment, just great care.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <Button variant="secondary" href="/contact">
            Book an Appointment
          </Button>
          <Button
            variant="secondary"
            href="https://crosscreeksdenta.securepayments.cardpointe.com/pay?"
            target="_blank"
            rel="noopener noreferrer"
          >
            Pay Bill Online
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>

  "image": "https://crosscreeksdental.com/og-image.jpg",
  "@id": "https://crosscreeksdental.com",
  "url": "https://crosscreeksdental.com",
  "telephone": businessInfo.phone,
  "email": businessInfo.email,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": businessInfo.address.street,
    "addressLocality": businessInfo.address.city,
    "addressRegion": businessInfo.address.state,
    "postalCode": businessInfo.address.zip,
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 39.8844,
    "longitude": -82.7540
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday"],
      "opens": "08:00",
      "closes": "17:00"
    }
  ],
  "sameAs": [
    "https://www.facebook.com/crosscreeksdental/",
    "https://www.instagram.com/crosscreeksdental/",
    "https://www.tiktok.com/@crosscreeksdental",
    "https://maps.google.com/maps?cid=11133590865144049245"
  ],
  "priceRange": "$$",
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",

<!-- Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<footer class="bg-bg-main-darker text-brand-deep py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      {/* Company Info */}
      <div>
        <h3 class="text-xl font-bold mb-4">Cross Creeks Dental</h3>
        <p class="text-text-dark/80">
          Quality dental care in a comfortable, judgment-free environment. We make it easy to get back to the dentistâ€”no judgment, just great care.
        </p>
        <div class="flex gap-6 mt-4">
          {/* Social Media Icons */}
          {socialLinks.map((social) => (
            <a
              href={social.href}
              class="hover:text-text-dark transition-colors"
              aria-label={social.label}
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon}></path>
              </svg>
            </a>
          ))}
        </div>
      </div>

      {/* Quick Links */}
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-text-dark/80 hover:text-text-dark transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Services */}
      <div>
        <h4 class="text-lg font-semibold mb-4">Our Services</h4>
        <ul class="space-y-2">
          <li class="text-text-dark/80">Preventive Care</li>
          <li class="text-text-dark/80">Cosmetic Dentistry</li>
          <li class="text-text-dark/80">Restorative Dentistry</li>
          <li class="text-text-dark/80">Emergency Care</li>
          <li class="text-text-dark/80">Family Dentistry</li>
        </ul>
      </div>

      {/* Contact Info */}
      <div>
        <h4 class="text-lg font-semibold mb-4">Contact Us</h4>
        <ul class="space-y-2 text-text-dark/80">
          <li class="flex items-center gap-2">
            <span class="text-brand-deep"><MapPin size={18} /></span>
            {businessInfo.address.full}
          </li>
          <li class="flex items-center gap-2">
            <span class="text-brand-deep"><Phone size={18} /></span>
            {businessInfo.phone}
          </li>
          <li class="flex items-center gap-2">
            <span class="text-brand-deep"><Mail size={18} /></span>
            {businessInfo.email}
          </li>
          <li class="flex items-center gap-2">
            <span class="text-brand-deep"><Clock size={18} /></span>
            {businessInfo.hours.display}
          </li>
        </ul>
      </div>
    </div>

    <div
      class="border-t border-text-dark/20 pt-8 text-center text-text-dark/80"
    >
      <p>&copy; {currentYear} Cross Creeks Dental. All rights reserved.</p>
    </div>
  </div>
</footer>

---
const services = [
  {
    title: 'Preventive Care',
    description: 'Regular cleanings, exams, and preventive treatments to keep your smile healthy.',
    icon: '🛡️'
  },
  {
    title: 'Cosmetic Dentistry',
    description: 'Teeth whitening, veneers, and smile makeovers to enhance your confidence.',
    icon: '✨'
  },
  {
    title: 'Restorative Dentistry',
    description: 'Fillings, crowns, bridges, and implants to restore function and beauty.',
    icon: '🔧'
  },
  {
    title: 'Emergency Care',
    description: 'Prompt treatment for dental emergencies and urgent care needs.',
    icon: '🚨'
  },
  {
    title: 'Family Dentistry',
    description: 'Comprehensive dental care for patients of all ages.',
    icon: '👨‍👩‍👧‍👦'
  },
  {
    title: 'Orthodontics',
    description: 'Straighten your smile with modern orthodontic solutions.',
    icon: '😁'
  }
];
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-brand-deep mb-4">
        Our Services
      </h2>
      <p class="text-xl text-text-dark/70 max-w-2xl mx-auto">
        Comprehensive dental care tailored to your unique needs
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="bg-bg-off-white p-8 rounded-lg hover:shadow-lg transition-shadow duration-300 border border-brand-light/20">
          <div class="text-5xl mb-4">{service.icon}</div>
          <h3 class="text-xl font-semibold text-brand-deep mb-3">
            {service.title}
          </h3>
          <p class="text-text-dark/70">
            {service.description}
          </p>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href="/services"
        class="inline-block bg-brand-deep text-white px-8 py-3 rounded-md font-semibold hover:bg-brand-medium transition-colors duration-200"
      >
        View All Services
      </a>
    </div>
  </div>
</section>
